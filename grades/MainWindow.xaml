<Window x:Class="grades.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="255">
    <Grid>
        <TextBox x:Name="gradeInput" HorizontalAlignment="Left" Height="25" Margin="33,53,0,0" TextWrapping="Wrap" Text="Enter Numeric Grade" VerticalAlignment="Top" Width="126"/>
        <TextBlock x:Name="gradeResult" HorizontalAlignment="Left" Height="56" Margin="33,95,0,0" TextWrapping="Wrap" Text="Convert numeric grade to letter grade." VerticalAlignment="Top" Width="178"/>
        <Button Content="E_xit" HorizontalAlignment="Left" Height="26" Margin="147,239,0,0" VerticalAlignment="Top" Width="64" IsCancel="True" Click="Button_Click"/>
        <TextBlock x:Name="errorMessage" HorizontalAlignment="Left" Height="43" Margin="32,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Foreground="#FFFD0404" Visibility="Hidden"/>
        <Button x:Name="btnOK" Content="O_K" HorizontalAlignment="Left" Margin="164,53,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btnOK_Click"/>

    </Grid>
</Window>
