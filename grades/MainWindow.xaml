<Window x:Class="grades.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Convert Grade" Height="194" Width="414" FontSize="16">
    <Grid>
        <TextBox x:Name="gradeInput" HorizontalAlignment="Left" Height="25" Margin="33,53,0,0" TextWrapping="Wrap" Text="Enter Numeric Grade" VerticalAlignment="Top" Width="202"/>
        <TextBlock x:Name="gradeResult" HorizontalAlignment="Left" Height="54" Margin="33,95,0,0" TextWrapping="Wrap" Text="Convert numeric grade to letter grade." VerticalAlignment="Top" Width="340" FontSize="16"/>
        <Button Content="E_xit" HorizontalAlignment="Left" Height="27" Margin="309,53,0,0" VerticalAlignment="Top" Width="64" IsCancel="True" Click="Button_Click"/>
        <Button x:Name="btnOK" Content="O_K" HorizontalAlignment="Left" Margin="240,53,0,0" VerticalAlignment="Top" Width="64" IsDefault="True" Click="btnOK_Click"/>

    </Grid>
</Window>
